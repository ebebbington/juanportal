    "mongoose": "6.0.7",
    "morgan": "1.10.0",
    "multer": "1.4.3",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "typescript": "4.4.3",
    "mocha": "9.1.1",
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@types/body-parser": "1.19.1",
    "@types/chai": "4.2.22",
